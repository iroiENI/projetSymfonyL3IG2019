                    <a data-toggle="modal" data-target="#myModal01" class="active text-center">
                      Les categories
                    <i class="fas fa-plus mr-3" style="margin-left: 30px;"></i>
                    </a>
                    {% for c in category %}
                    <a href="#" class="list-group-item list-group-item-action waves-effect">
                      {{ c.libelle}}
