                      <!-- Sidebar -->
                      <div class="modal" id="myModal01">
                        <div class="modal-dialog">
                          <div class="modal-content">
                          
                            <!-- Modal Header -->
                            <div class="modal-header">
                              <h4 class="modal-title">Ajout de categorie</h4><span style="margin-top: 8px; margin-left: 10px;"></span>
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                         <!-- Modal body -->
                         <div class="modal-body">
                           

                          {{ form_start(form) }}
                  
                          <div class="form-inline">
                                  <div class="form-group mx-sm-3 mb-2">
                                      {{ form_row(form.libelle,  {'label': ' ','attr': {'placeholder': 'Libelle du produit'}}) }}
                                  </div>
                                  <button type="submit" class="btn btn-primary btn-sm mb-2">Ajouter</button>
                          </div>
                          {{ form_end(form)}}

                    </div>
                    </header>
    <main class="pt-5 mx-lg-15">
            <div class="container-fluid mt-5">
        
              <!--Grid row-->
              <div class="row wow fadeIn">
        
                <!--Grid column-->
                <div class="col-md-12 mb-4">
        
                  <!--Card-->
                  <div class="card">
        
                    <!--Card content-->
                    <div class="card-body">
                            <div class="bg-light p-3">
                                    <h1>Liste des produits</h1>
                                </div>
            <div class="text-right" style="margin-top: 20px; margin-right:20px;">
                    <a href="{{ path('formulaire') }}">
                            <i class="fas fa-plus mr-3" ></i>Ajout
                        </a>
                    </div>
            
        </div>

        {% if product | length >0 %}
        <table class="table table-striped">
            <thead class="blue-grey lighten-4" style="text-transform: capitalize;">
                <tr>
                    <th>Designation</th>
                    <th>P.U</th>
                    <th>Fournisseur</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for p in product %}
                    <tr>
                        <td>{{ p.designation }}</td>
                        <td>{{ p.pu }}</td>
                        <td>{{ p.fournisseur }}</td>
                        <td>{{ p.image }}</td>
                        <td>
                            <a href="{{ path('admin_delete', {'id': p.id}) }}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                            <a href="{{ path('product_edit', {'id': p.id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
    </div>

</div>
<!--Grid row-->
</div>
 

</div>
</div>
